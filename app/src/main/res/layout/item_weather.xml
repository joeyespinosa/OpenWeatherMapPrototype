<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_1"
    android:background="@color/itemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="UnusedAttribute"
    android:padding="@dimen/dimen_16"
    android:id="@+id/constraintlayout_list_item">

    <TextView
        android:id="@+id/textview_list_temp"
        style="@style/WeatherListTempText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <ImageView
        android:id="@+id/imageview_favorite_item"
        style="@style/WeatherListTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_favorite_border_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/textview_list_city"
        style="@style/WeatherListTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_list_temp"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/textview_list_status"
        style="@style/WeatherListCityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_list_city"
        tools:text="@tools:sample/full_names" />



</androidx.constraintlayout.widget.ConstraintLayout>